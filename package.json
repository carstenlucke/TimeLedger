{
  "name": "electron-app-template",
  "version": "1.0.0",
  "description": "A modern Electron application template with React, TypeScript, SQLite, and more",
  "main": "./dist/main/index.js",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron --inspect=5858 .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "node scripts/run-dist.js --mac --arm64 --publish never",
    "dist:universal": "node scripts/run-dist.js --mac --universal --publish never",
    "postdist": "node scripts/postdist.js",
    "clean": "rimraf dist",
    "clean:release": "rimraf release",
    "clean:all": "rimraf dist release",
    "postinstall": "node scripts/fix-electron-name.js && electron-rebuild"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "electron-log": "^5.0.1",
    "lucide-react": "^0.458.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2"
  },
  "build": {
    "publish": null,
    "appId": "com.electronapp.template",
    "productName": "ElectronApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "assets/icons/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/app_icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icons/icon_512x512.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon_512x512.png"
    }
  }
}
