{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "noEmit": false,
    "jsx": "preserve",
    "lib": ["ES2020"],
    "target": "ES2020",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main", "src/shared", "src/preload"]
}
